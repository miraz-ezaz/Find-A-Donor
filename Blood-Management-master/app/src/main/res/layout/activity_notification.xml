<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/bgRed"
    tools:context=".NotificationActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        android:paddingBottom="10dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/frWhite"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/frWhite"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:src="@drawable/logo_notification"/>
            <TextView
                android:text="Notifications"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_below="@+id/mainLayout"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:id="@+id/notificationPersonal"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="start"
                android:textAlignment="textStart"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_below="@+id/mainLayout"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:id="@+id/notificationGlobal"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:padding="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>